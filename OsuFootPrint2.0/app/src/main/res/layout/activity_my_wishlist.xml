<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:text="WISHLIST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="wishlist1"
        android:onClick="onClick"
        android:layout_marginTop="57dp"
        android:id="@+id/my_footprints"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="wishlist2"
        android:onClick="onClick"
        android:layout_marginTop="57dp"
        android:id="@+id/My_wishlist"
        android:layout_below="@+id/my_footprints"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="wishlist3"
        android:onClick="onClick"
        android:layout_marginTop="57dp"
        android:id="@+id/test_log"
        android:layout_below="@+id/My_wishlist"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="back"
        android:onClick="onClick"
        android:id="@+id/back_wishlist"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView" />

</RelativeLayout>
